<!DOCTYPE html>
<html>
<head>
  <title>Samp.lr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <div id="nav">
      <%= link_to(image_tag("samplr_logo.png", size: "201x115", :id => "logo"), root_path) %>
        <ul>
          <% if current_user %>
            <%= image_tag current_user.image + '?type=small', {:class => 'profile-img'} if current_user.image %>
            <%#= current_user.name if current_user.name %>
            <%= current_user.email %>
            <%= link_to(image_tag("samplr_standby.png", size: "50x50"), destroy_user_session_path, method: :delete) %>
          <% else %>
            <%= link_to 'sign in', new_user_session_path %>
            <%= link_to 'register', new_user_registration_path %>
            <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
          <% end %>
        </ul>
    </div>
      <div id="main">

      </div>
  </div>
<%= yield %>

</body>
</html>




