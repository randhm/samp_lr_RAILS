<!DOCTYPE html>
<html>
<head>
  <title>Samp.lr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <% if current_user %>
    <div id="nav">
      <%= link_to(image_tag("samplr_logo.png", size: "201x115", :id => "logo"), root_path) %>
        <div id="nav-items">
          <div><%= link_to 'Kits', root_path, :id => "kits-link" %></div>
          <div><%= link_to 'My songs', songs_path, :id => "my-songs" %></div>

          <% if current_user && current_user.image %>
            <div id="photo"><%= link_to(image_tag(current_user.image + '?type=small', :class => 'profile-img'), songs_path) %></div>
            <% end %>
            <%#= current_user.name if current_user.name %>
          <div id="email"><%= current_user.email %></div>
          <div id="standby"><%= link_to(image_tag("samplr_standby.png", size: "40x40"), destroy_user_session_path, method: :delete) %></div>

          <% end %>
        </div>
    </div>
      <div id="main">

      </div>
  </div>
<%= yield %>

</body>
</html>




