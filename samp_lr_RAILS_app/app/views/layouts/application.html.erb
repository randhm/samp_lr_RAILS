<!DOCTYPE html>
<html>
<head>
  <title>Samp.lr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <% if current_user %>
    <div id="nav">
      <%= link_to(image_tag("samplr_logo.png", size: "201x115", :id => "logo"), root_path) %>
        <ul>
          <% if current_user && current_user.image %>
            <%= link_to(image_tag(current_user.image + '?type=small', :class => 'profile-img'), songs_path) %>
            <% end %>
            <%#= current_user.name if current_user.name %>
            <%= current_user.email %>
            <%= link_to(image_tag("samplr_standby.png", size: "50x50"), destroy_user_session_path, method: :delete) %>

          <% end %>
        </ul>
    </div>
      <div id="main">

      </div>
  </div>
<%= yield %>

</body>
</html>




